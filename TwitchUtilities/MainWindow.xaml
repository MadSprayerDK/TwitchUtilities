<Window x:Class="TwitchUtilities.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TwitchUtilities.UserInterface"
        Title="Twitch Utilities" 
        Height="350"
        MinHeight="350"
        Width="505"
        MinWidth="505"
        Icon="icon.png">
    <Grid>
        <TabControl
            Margin="0, 2, 0, 0">
            <TabItem
                Header="Checklist">
                <controls:Checklist />
            </TabItem>
            
            <TabItem
                Header="Status">
                <controls:Status />
            </TabItem>
            
            <TabItem
                Header="Labels">
                <controls:Labels />
            </TabItem>
        </TabControl>        
    </Grid>
</Window>